<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundinho"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="174dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:scrollbarSize="20dp"

            />

        <EditText
            android:id="@+id/edtUser2"
            android:drawableEnd="@drawable/user"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fundo"
            android:hint="User name"
            android:paddingLeft="20dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:inputType="text"
            android:textAppearancScrowViewe="@style/TextAppearance.AppCompat.Body2"
            android:drawableRight="@drawable/bordinha" />

        <EditText
            android:id="@+id/EdtPassword2"
            android:drawableRight="@drawable/chave"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fundo"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:textAppearancScrowViewe="@style/TextAppearance.AppCompat.Body2"/>

        <EditText
            android:id="@+id/edtemail"
            android:drawableRight="@drawable/email"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fundo"
            android:hint="E-mail"
            android:paddingLeft="20dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:inputType="text"
            android:textAppearancScrowViewe="@style/TextAppearance.AppCompat.Body2"/>

        <EditText
            android:id="@+id/edtTelefone"
            android:drawableRight="@drawable/phone"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fundo"
            android:hint="Phone"
            android:paddingLeft="20dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:inputType="phone"
            android:textAppearancScrowViewe="@style/TextAppearance.AppCompat.Body2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10dp"
                android:text="@string/allow_term_conditions"
                android:textColor="#F6F6F6"
                android:layout_marginLeft="90dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_term_conditions"
                android:textColor="#FFFFFF"
                android:textSize="16dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnEntrar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:layout_marginRight="105dp"
            android:background="@drawable/bordinha"
            android:text="@string/Singin"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="40dp"
                android:text="Do you have account?"
                android:textColor="#FFF" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="330dp"
                android:orientation="vertical">

                <ImageButton
                    android:onClick="signUp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <TextView
                android:onClick="signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-20dp"
                android:text="Sign in"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>